<%= button_to "Sign Out", destroy_user_session_path, method: 'delete', :"data-turbolinks" => false %>

<%= image_tag current_user.image.variant(resize_to_fill: [150, nil]) ? current_user.image : 'https://cdn.pixabay.com/photo/2016/04/01/10/11/avatar-1299805__340.png', class: "rounded-circle mr-2" if current_user %>


<% @recipes.each do |recipe| %>
    <%= link_to recipe.name, recipe_path(recipe.id) %>
    <%= recipe.description %>
    <%= link_to "Delete", recipe_path(recipe.id), method: :delete, data: { confirm: "Are you sure?" } %>
    <%= link_to "Show", recipe_path(recipe.id) %>
<% end %>



