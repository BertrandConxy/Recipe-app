
<section class="container-fluid vh-100" style="background-color: var(--neutral-color-2);">
<div class="container py-5 h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col col-xl-10">
      <div class="card" style="border-color: var(--accent-color);">
        <div class="row g-0">
          <div class="col-md-8 col-lg-8 col-sm-12 d-flex align-items-center">
            <div class="card-body p-4 p-lg-5 text-black">
          <h2>Quickly Create a new account</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field pb-2">
              <%= f.label 'Profile Picture' %><br />
              <%= f.file_field :image, class: 'form-control' %>
            </div>

            <div class="field pb-2">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "Full name", placeholder: 'Full name', class: 'form-control', :required => true %>
            </div>
            <div class="field pb-2">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', :required => true %>
            </div>

            <div class="field  pb-2">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', :required => true%>
            </div>

            <div class="field pb-2">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-dark btn-lg btn-block" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>